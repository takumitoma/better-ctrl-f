{
  "manifest_version": 3,
  "name": "Better Ctrl+F",
  "description": "An enhanced search feature that improves the default Ctrl+F functionality.",
  "version": "1.0.0",
  "icons": {
    "16": "public/icons/16.png",
    "32": "public/icons/32.png",
    "64": "public/icons/64.png",
    "128": "public/icons/128.png"
	},
  "permissions": [
    "scripting",
    "activeTab",
    "storage"
  ],
  "host_permissions": [ 
    "http://*/*",
    "https://*/*"
  ],
  "action": { 
    "default_popup": "index.html",
    "default_title": "Better Ctrl+F",
    "default_icon": {
      "16": "public/icons/16.png",
      "32": "public/icons/32.png",
      "64": "public/icons/64.png",
      "128": "public/icons/128.png"     
    }
  },
  "background": {
    "service_worker": "src/background/background.ts"
  },
  "content_scripts": [
    {
      "js": ["src/content/content.ts"],
      "matches": [
        "http://*/*",
        "https://*/*"
      ]
    }
  ],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "Command+Shift+F"
      }
    }
  }
}
