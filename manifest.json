{
  "manifest_version": 3,
  "name": "Better Ctrl+F",
  "description": "An enhanced version of the default Ctrl+F.",
  "version": "1.0.0",
  "icons": {
    "16": "public/icons/16.png",
    "32": "public/icons/32.png",
    "64": "public/icons/64.png",
    "128": "public/icons/128.png"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "action": { 
    "default_popup": "index.html",
    "default_title": "Better Ctrl+F",
    "default_icon": {
      "16": "public/icons/16.png",
      "32": "public/icons/32.png",
      "64": "public/icons/64.png",
      "128": "public/icons/128.png"     
    }
  },
  "background": {
    "service_worker": "src/background/background.ts"
  },
  "content_scripts": [
    {
      "js": ["src/content/content.ts"],
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "exclude_matches": [
        "*://*/*.doc",
        "*://*/*.docx",
        "*://*/*.xls",
        "*://*/*.xlsx",
        "*://*/*.ppt",
        "*://*/*.pptx",
        "*://docs.google.com/document/*",
        "*://docs.google.com/spreadsheets/*",
        "*://docs.google.com/presentation/*",
        "*://office.com/launch/word*",
        "*://office.com/launch/excel*",
        "*://office.com/launch/powerpoint*",
        "*://office.live.com/word*",
        "*://office.live.com/excel*",
        "*://office.live.com/powerpoint*",
        "*://acrobat.adobe.com/link/review*"
      ]
    }
  ],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "Command+Shift+F"
      }
    }
  }
}